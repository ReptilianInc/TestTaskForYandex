<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGrey">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">
            <Button
                android:id="@+id/f_lan_button"
                style="@style/ChooseLangButton"/>
            <ImageButton
                android:id="@+id/switch_lang"
                android:layout_width="52dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_switch_languages"
                android:background="?android:attr/selectableItemBackground"/>
            <Button
                android:id="@+id/s_lan_button"
                style="@style/ChooseLangButton"/>
        </LinearLayout>
    </android.support.design.widget.AppBarLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tools_frame"
                android:background="@color/colorWhite"
                android:elevation="2dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="@string/request_textbox_hint"
                    android:layout_toStartOf="@+id/delete_text_button"
                    android:layout_toLeftOf="@+id/delete_text_button"
                    android:paddingTop="16dp"
                    android:paddingLeft="16dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="8dp"
                    android:paddingRight="8dp"
                    android:id="@+id/textview_request"
                    android:textSize="18sp"
                    android:background="@color/colorWhite"
                    android:textColor="@color/colorDarkGrey"/>
                <View
                    android:id="@+id/divider"
                    style="@style/Divider"
                    android:layout_marginTop="4dp"
                    android:layout_below="@+id/textview_request"/>
                <TextView
                    android:id="@+id/textview_result"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/divider"
                    android:layout_margin="16dp"
                    android:textSize="16sp"
                    android:layout_toStartOf="@+id/progressbar"
                    android:layout_toLeftOf="@+id/progressbar"
                    android:text="@string/result_hint"
                    />
                <ImageButton
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:id="@+id/delete_text_button"
                    android:src="@drawable/ic_delete_text"
                    android:background="?android:attr/selectableItemBackground"/>
                <ProgressBar
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:id="@+id/progressbar"
                    android:visibility="invisible"
                    android:layout_below="@+id/delete_text_button"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_margin="12dp"/>
            </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tools_frame"
            android:layout_margin="6dp"
            android:background="@color/colorWhite"
            android:elevation="2dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/before"
                android:text="@string/before_textview"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:layout_margin="8dp"/>

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/before"
                android:id="@+id/recyclerview_results"/>
        </RelativeLayout>
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>